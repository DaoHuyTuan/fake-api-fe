{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/no-set-state": "off",
    "react/prop-types": 0, // TODO: will turn on when the first release comming
    "react/react-in-jsx-scope": "off",
    // "react/jsx-no-useless-fragment": "on",
    "react/jsx-pascal-case": 2
  },
  "parser": "babel-eslint"
}
